# ==========================================
# Claude Cloud - 環境變數配置範本
# ==========================================
# 
# 使用方法：
# 1. 複製此檔案為 .env：cp .env.sample .env
# 2. 填入各項實際值
# 3. 確保 .env 已在 .gitignore 中
# 
# ⚠️  警告：絕對不要將 .env 檔案提交到版本控制！
# ==========================================

# === 應用程式基本設定 ===
NODE_ENV=development
APP_NAME=claude-cloud
PORT=3000
HOST=localhost

# === AI 服務配置 ===
# Anthropic Claude API Key (必填)
# 取得位置: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-claude-api-key-here

# OpenAI API Key (選填，如需使用 GPT 系列)
# 取得位置: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# === 資料庫配置 ===
# BigQuery 設定
BQ_PROJECT_ID=your-gcp-project-id
BQ_DATASET=your-dataset-name
BQ_LOCATION=US

# 主要資料庫 (PostgreSQL/MySQL 等)
DATABASE_URL=postgresql://username:password@localhost:5432/claude_cloud_dev

# Redis (快取/會話儲存)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# === 雲端服務配置 ===
# AWS 配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud 配置
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# === 認證與安全 ===
# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密金鑰
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS 設定 (多個網域用逗號分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === 外部服務整合 ===
# 電子郵件服務 (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 支付服務 (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# === 監控與日誌 ===
# 日誌等級: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Sentry 錯誤追蹤
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === 效能與限制 ===
# API 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 檔案上傳限制 (MB)
MAX_FILE_SIZE=10

# 資料庫連線池
DB_POOL_MIN=2
DB_POOL_MAX=10

# === 功能開關 ===
# 啟用功能旗標
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=true
ENABLE_METRICS=true
ENABLE_CACHING=true

# === 開發工具配置 ===
# 熱重載
ENABLE_HOT_RELOAD=true

# API 文件
API_DOCS_PATH=/api-docs

# === 測試環境專用 ===
# 測試資料庫
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/claude_cloud_test

# 模擬服務
MOCK_EXTERNAL_APIS=false

# === 生產環境額外設定 ===
# (以下變數僅在 NODE_ENV=production 時使用)

# SSL 憑證
SSL_CERT_PATH=path/to/certificate.crt
SSL_KEY_PATH=path/to/private.key

# CDN 配置
CDN_URL=https://cdn.yourdomain.com

# 健康檢查
HEALTH_CHECK_PATH=/health

# ==========================================
# 設定檢查清單 ✓
# ==========================================
# □ 已複製為 .env
# □ 填入所有必要的 API keys
# □ 資料庫連線字串正確
# □ 確認 .env 在 .gitignore 中
# □ 生產環境使用強密碼
# □ 權限設定最小化原則
# ==========================================
