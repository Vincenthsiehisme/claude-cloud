{
  "name": "claude-cloud",
  "version": "2.0.0",
  "description": "AI-powered cloud collaboration platform with Claude integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts,js,json --exec tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    
    "security:check": "npm audit && snyk test",
    "security:fix": "npm audit fix",
    "env:validate": "tsx scripts/validate-env.ts",
    "secrets:audit": "tsx scripts/audit-secrets.ts",
    
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    
    "deploy": "npm run build:prod && npm run deploy:cloud",
    "deploy:staging": "NODE_ENV=staging npm run deploy",
    "deploy:production": "NODE_ENV=production npm run deploy",
    "deploy:cloud": "tsx scripts/deploy.ts",
    
    "docker:build": "docker build -t claude-cloud .",
    "docker:run": "docker run -p 3000:3000 claude-cloud",
    "docker:compose": "docker-compose up -d",
    
    "clean": "rimraf dist coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules",
    "prebuild": "npm run clean",
    "postinstall": "tsx scripts/post-install.ts"
  },
  "keywords": [
    "ai",
    "claude",
    "cloud",
    "collaboration",
    "nodejs",
    "typescript",
    "bigquery",
    "gcp"
  ],
  "author": {
    "name": "Claude Cloud Team",
    "email": "dev@claude-cloud.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-cloud.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/claude-cloud/issues"
  },
  "homepage": "https://claude-cloud.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@google-cloud/bigquery": "^7.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.5.0",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.7",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    
    "typescript": "^5.2.2",
    "tsx": "^4.6.0",
    "tsc-alias": "^1.8.8",
    "nodemon": "^3.0.1",
    
    "eslint": "^8.54.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@playwright/test": "^1.40.1",
    
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    
    "snyk": "^1.1248.0",
    "@sentry/node": "^7.81.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:unit && npm run security:check"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  }
}
